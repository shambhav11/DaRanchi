<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f2d0"

    android:layout_height="match_parent"
    tools:context=".ChoosingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_frame"
        android:layout_height="180dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:textSize="40sp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:textColor="#000"
    android:id="@+id/district"
    android:text="District Administration"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:textSize="28sp"
            android:layout_marginBottom="1dp"
            android:id="@+id/cityname"
            android:textColor="#000"
            android:text="Ranchi, Jharkhand"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_marginTop="50dp"
            android:id="@+id/present"
            android:textColor="#000"
            android:textStyle="italic"
            android:text="A tool to monitor implementation of \n Pre Conception Pre Natal Diagnostic Act"/>
        <ImageView
            android:layout_width="70dp"
            android:src="@drawable/jharkhand_logo_tiny"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            />


        <ImageView
            android:layout_width="60dp"
            android:src="@drawable/emblem_india"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_height="60dp"
            android:layout_gravity="end"

            />


    </FrameLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@id/image_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:textColor="#000"
        android:text="Welcome"/>



    <Button
        android:layout_width="wrap_content"
        android:id="@+id/clinics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FCEFDF"
        android:textAlignment="center"
        android:textColor="#000"
        android:padding="5dp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintBottom_toTopOf="@id/doctors"
        android:text="Clinics"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/doctors"
        app:layout_constraintTop_toBottomOf="@id/clinics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/patients"
        android:background="#FCEFDF"
        android:textAlignment="center"
        android:textColor="#000"
        android:padding="5dp"
        android:textSize="30sp"
        android:text="Doctors"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/patients"
        app:layout_constraintTop_toBottomOf="@id/doctors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/admin"
        android:background="#FCEFDF"
        android:textAlignment="center"
        android:textColor="#000"
        android:padding="5dp"
        android:textSize="30sp"
        android:text="Patients"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/admin"
        app:layout_constraintTop_toBottomOf="@id/patients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FCEFDF"
        android:textAlignment="center"
        android:textColor="#000"
        android:padding="5dp"
        android:textSize="30sp"
        android:text="Admin Panel"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>